{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample server for a microservice payments API.",
        "title": "Microservice Payments API",
        "contact": {
            "name": "API Support",
            "url": "http://www.example.com/support"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/v1/payments",
    "paths": {
        "/v1/payments/health": {
            "get": {
                "description": "Check if the service is alive",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Health"
                ],
                "summary": "Health Check",
                "responses": {
                    "200": {
                        "description": "Service is healthy",
                        "schema": {
                            "type": "booblean"
                        }
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "ApiKeyAuth": {
            "type": "apiKey",
            "name": "X-API-KEY",
            "in": "header"
        }
    }
}